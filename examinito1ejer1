//cilindro.h
#pragma una vez
clase cilindro
{
Privado: radio flotante;
		 flotar altura;
público:
	cilindro (vacío);
	~ cilindro (vacío);
	área vacía (float r, float h);
};

//cilindro.cpp
#include "StdAfx.h"
#include "cilindro.h"
#include "conio.h"
#include <iostream> 
utilizando namespace std;

cilindro :: cilindro
{
}


cilindro :: ~ cilindro (vacío)
{
}

void cilindro :: area (float r, float h)
{área flotante;
área = (2 * 3.1416 * r * r) + (2 * 3.1416 * r * h);
cout << "El area del cilindro es:" << area << "u2" << endl;
}
// examinito1.cpp

#include "stdafx.h"
#include "cilindro.h"
#include "conio.h"
#include <iostream> 
utilizando namespace std;


vacío principal()
{float rad, alt;
cilindro c1;
do {cout << "Ingrese el radio del cilindro:"; 
   cin >> rad;
  } while (rad <= 0);
do {cout << "Ingrese la altura cilindro:"; 
   cin >> alt;
  } while (alt <= 0);
c1.area (rad, alt);
getch ();
}
