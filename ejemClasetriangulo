//triangulo.h
#pragma una vez
clase triangulo
{
privado:
	base flotante
	flotar altura;

público:
	triangulo (float _base, float _altura);
	área de flotación (base de flotación, altura de flotación);
	~ triangulo (vacío);
};

//triangulo.cpp
#include "StdAfx.h"
#include "triangulo.h"

triangulo :: triangulo (float _base, float _altura)
{base = _base;
 altura = _altura;
}


triangulo :: ~ triangulo (nulo)
{
}

float triangulo :: area (float base, float altura)
{float aux; 
 aux = base * altura / 2;
  volver aux.
}

